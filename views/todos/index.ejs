<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>To-Dos</title>
</head>
<body>
    <h1>Todos</h1>
    <a href="../">Home Page</a>

    <ul>
            <% todos.forEach(function(t, idx) { %>
                <li>
                  <a href="/todos/<%= idx %>"><%= t.todo %></a>
          <%= t.done ? 'done' : 'not done' %>
        </li>
      <% }); %>
    </ul>
  </body>
</html>